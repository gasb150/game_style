
<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <h2><%= f.input :title, class: 'article_title', placeholder: 'Yor title here' %></h2>
    <h2><%= f.input :text, class:'article_text', placeholder: 'Write your article text...'%></h2>
    <h2><%= f.file_field :image, class: 'form-control', direct_upload: true  %></h2>
  </div>
 
  <div class="field">
  <%= hidden_field_tag "article[category_ids][]", nil %>
  <div class="category_select">
  <%= article_select %>
  </div>
</div>

       <div class="form-actions">
    <%= f.button :submit, class: "button btn" %>
  </div>

      <% end %>


