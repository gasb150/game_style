<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <div class="article-input"><%= f.input :title, class: 'article_title', placeholder: 'Yor title here' %></div>
    <div class="article-input"><%= f.input :text, class:'article_text', placeholder: 'Write your article text...'%></div>
    <div class="article-input image_upload"><%= f.file_field :image, class: 'form-control', direct_upload: true  %></div>
  </div>
  <div class="field">
    <div class="flex">
      <abbr title="required">*</abbr>
      <p class ="choose">Choose a category</p>
    </div>
    <%= hidden_field_tag "article[category_ids][]", nil %>
    <div class="category_select">
      <%= article_select %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "button btn" %>
  </div>
<% end %>
